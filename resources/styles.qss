* { font-family: "Segoe UI", Roboto, Arial, sans-serif; font-size: 12px; }
QWidget { background: #f7f9fc; color: #222; }
QLabel[heading="true"] { font-size: 16px; font-weight: 600; margin: 6px 0 12px 0; }
QLineEdit, QTextEdit, QDateEdit, QComboBox { background: white; border: 1px solid #cbd6e2; padding:6px; border-radius:6px; }
QPushButton { background: qlineargradient(x1:0,y1:0,x2:0,y2:1, stop:0 #4b9ef7, stop:1 #2f7fe6); color: white; border:none; padding:8px 12px; border-radius:8px; }
QTableView { background: white; border:1px solid #d6e1ee; border-radius:8px; }
